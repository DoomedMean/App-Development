<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.View.ChangePasswordPage"
             Title="ChangePasswordPage">

    <Grid RowDefinitions="Auto, Auto, Auto, Auto" 
              ColumnDefinitions="Auto, *" 
              RowSpacing="20" 
              ColumnSpacing="10"
              Margin="20"
              >
            <Label Text="Password (Old) :" VerticalTextAlignment="Center"/>
            <Entry Grid.Column="1" VerticalTextAlignment="Center"/>
            <Label Grid.Row="1" Text="Password (New) :" VerticalTextAlignment="Center"/>
            <Entry Grid.Row="1" Grid.Column="1" VerticalTextAlignment="Center"/>
            <Label Grid.Row="2" Text="Confirm Password :" VerticalTextAlignment="Center"/>
            <Entry Grid.Row="2" Grid.Column="1" VerticalTextAlignment="Center"/>
        <Button 
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Text="Save"
            Clicked="Save_Button"
            />
    </Grid>

</ContentPage>