<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.View.LoginPage"
             Title="Login">
    <StackLayout Spacing="20" VerticalOptions="Center" HorizontalOptions="Center" Margin="50">

        <VerticalStackLayout>
            <Image Source="opposite"/>
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Entry 
            Placeholder="Email"/>

            <Entry Placeholder="Password" IsPassword="True"
               Completed="Entry_Completed"/>
        </VerticalStackLayout>

        <Button Text="Login" Clicked="Login_Clicked"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                CornerRadius="20"
            />
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="20" Margin="0,20,0,0">
            <ImageButton Source="google.png" Clicked="ImageButton_Clicked" WidthRequest="24"/>
            <ImageButton Source="facebook.png" Clicked="ImageButton_Clicked" WidthRequest="24"/>
            <ImageButton Source="microsoft.png" Clicked="ImageButton_Clicked" WidthRequest="24"/>
        </HorizontalStackLayout>
    </StackLayout>
</ContentPage>